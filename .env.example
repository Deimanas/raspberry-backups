# Šis failas yra pasirinktinis. Jei jo nenaudosite, script naudos numatytas reikšmes.
# Galite exportinti kintamuosius per shell/cron ir veikti be .env failo.

# Global
BACKUP_BASE_DIR=/backups
# Jei gaunate Permission denied su /backups, naudokite vartotojo kelią, pvz.:
# BACKUP_BASE_DIR=/home/<user>/backups
BACKUP_SOURCE_ROOTS=/srv
LOG_DIR=./logs
TZ=Europe/Vilnius

# Scheduling / retention
RETENTION_DAILY_DAYS=7
RETENTION_WEEKLY_WEEKS=4
MIN_FREE_MB=2048
COMPRESSION=gzip

# Runtime behavior
STOP_CONTAINERS=true
DB_DUMP_TIMEOUT=300
VOLUME_BACKUP_TIMEOUT=1800
EXCLUDE_CONTAINERS=
EXCLUDE_VOLUMES=

# DB credentials (optional override; otherwise auto-read from container env)
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=

# Notifications (optional)
DISCORD_WEBHOOK_URL=
DISCORD_NOTIFY_ON_SUCCESS=false
DISCORD_NOTIFY_ON_ERROR=true

# Extra labels for metadata
SERVER_NAME=raspberry-prod
